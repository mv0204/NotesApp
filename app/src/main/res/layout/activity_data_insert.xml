<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".DataInsertActivity">


    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@drawable/notes_bg"
        android:padding="20dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/notes_bg"
        android:ems="10"
        android:hint="Notes"
        android:inputType="text"
        android:padding="20dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/editTextTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTitle"
        app:layout_constraintTop_toBottomOf="@+id/editTextTitle" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Add Note"
        android:paddingLeft="30dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:backgroundTint="@color/lightYellow"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/editTextNotes"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/editTextNotes"
        app:layout_constraintTop_toBottomOf="@+id/editTextNotes" />
</androidx.constraintlayout.widget.ConstraintLayout>